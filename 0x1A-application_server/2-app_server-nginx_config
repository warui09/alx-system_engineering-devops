# configure Nginx to serve the route /airbnb-onepage/ from AirBnB_clone_v2.

server {
    # listen on port 80
    listen 80;

    server_name 54.89.49.53;

    # create HTTP headers
    add_header X-Served-By 311130-web-01;

    # serve /airbnb-onepage/
    location = /airbnb-onepage/ {
        proxy_pass http://127.0.0.1:5000/airbnb-onepage/;
    }

    # 404 response
    error_page 404 /404.html;
    location /404 {
        root /var/www/html;
        internal;
    }
}
